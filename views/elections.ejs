
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <title><%= title %></title>
</head>
<script>
    // function to delete election
    var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
    function deleteElection(id) {          

            fetch(`/elections/${id}`, {
                method: "DELETE",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ _csrf: token }),
            }).then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
        }
</script>
<body class="bg-gray-50">
    <%- include('header.ejs') %>
    <div class="my-6 mx-10">
        <h3 class="text-4xl my-4 font-medium">Hello, <%= Electionuser %></h3>
        <div>
            <% if (messages.success) { %>
                <p class="bg-orange-100 m-3 list-none rounded-md px-4 py-2"><%= messages.success %></p>
            <% } %>
        </div>
        <div class="flex gap-2 py-4 justify-between">
            <h5 class="text-2xl">Your Elections</h5>
            <div class="bg-black rounded w-fit px-2 py-1 hover:bg-black">
                <a href="/elections/new" class="text-white">ADD  NEW  ELECTION</a>
            </div>
        </div>
        
        <div class="flex-auto">
            <div class="mx-4">  
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <p class="text-orange-600"><%= (elections.length==0)?"You haven't created any elections yet!":"" %></p>
                <ol class="list-decimal">
                    <% for (let i=0; i<elections.length; i++) { %>
                        <li>
                            <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-white">
                                <a href="/elections/<%= elections[i].id %>" class="m-2 text-sm text-blue-800 "><%= elections[i].ElectionName %></a>
                            </div>
                            <div class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-purple-600">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mt-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                  </svg>                                      
                                <a onclick="" class="text-sm">Delete Election</a>
                            </div>                            
                        </li>
                        
                    <% } %>
                </ol>
            </div>
        </div>
    </div>
</body>
</html>