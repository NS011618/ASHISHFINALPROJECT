<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Edit question</title>
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function updateQuestion() {
            let EID = <%= EID %>;
            let QID = <%= QID %>;
            let QuestionName = document.getElementById("QuestionName").value;
            let Description = document.getElementById("Description").value;
            fetch(`/questions/${QID}/edit`, {
                method: "put",
                headers: {"Content-Type":"application/json"},
                body: JSON.stringify({
                    "_csrf":token,
                    "QuestionName":QuestionName,
                    "Description":Description
                })
            }).then((res)=>{
                if (res.ok) {
                    window.location.replace(`/elections/${EID}/questions`);
                }
            }).catch((err)=> console.error(err))
        }
    </script>
</head>
<body class="bg-gray-50">
    <%- include('header.ejs') %>
    <div class="flex gap-1 mx-10 mt-6 bg-gray-50">        
        <a href="/elections" class="text-purple-800 hover:text-purple-600">Home</a>
        <span>></span>
        <a href="/elections/<%= EID %>/" class="text-purple-800 hover:text-purple-600">Election</a>
        <span>></span>
        <a href="/elections/<%= EID %>/questions" class="text-purple-800 hover:text-purple-600">Questions</a>
    </div>
    <div class=" flex  text-gray-800 antialiased flex-col  overflow-hidden bg-gray-50 py-6 sm:py-12">
        <div class=" py-3 sm:w-96 mx-auto text-center">
            <span class="text-2xl font-light ">Edit question</span>
            <div>
                <% if (messages && messages.error && messages.error.length > 0) { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                        <p class="bg-purple-100 my-3 list-none rounded-md px-4 py-2"><%= messages.error[i] %></p>
                    <% } %>
                <% } %>
            </div>
            <div class="mt-4 bg-white shadow-md rounded-lg text-left">
                <div class="h-2 bg-black rounded-t-md"></div>
                <div class="px-8 py-6">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <label for="QuestionName" class="block mt-3 font-semibold">Question</label>
                    <input value="<%= QuestionName %>" id="QuestionName" name="QuestionName" type="text" placeholder="Question" class="border w-full h-5 px-3 py-5 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md" required>
                    <label for="Description" class="block mt-3 font-semibold">Description</label>
                    <textarea id="Description" name="Description" class="border w-full px-2 py-1 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md" placeholder="Description" rows="4" cols="20"><%= Description %></textarea>
                    <button class="mt-6 w-full bg-black text-white py-2 px-6 rounded-md hover:bg-green-300 " onclick="updateQuestion()">Update question</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>